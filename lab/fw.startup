ip address add 1.1.0.1/30 dev eth0
ip address add 1.2.0.1/30 dev eth1
ip address add 1.0.0.2/30 dev eth2
ip route add 10.0.0.0/24 via 1.1.0.2 dev eth0
ip route add 11.1.0.0/16 via 1.2.0.2 dev eth1
ip route add 1.2.1.0/24 via 1.2.0.2 dev eth1

iptables-legacy -A FORWARD -i eth2 -o eth0 -j DROP
iptables-legacy -A FORWARD -i eth2 -o eth1 -j DROP
iptables-legacy -A FORWARD -i eth2 -o eth0 -m state --state ESTABLISHED -j ACCEPT
iptables-legacy -A FORWARD -i eth2 -o eth1 -m state --state ESTABLISHED -j ACCEPT

iptables-legacy -A FORWARD -i eth0 -o eth1 -j ACCEPT
iptables-legacy -A FORWARD -i eth1 -o eth0 -j ACCEPT

iptables-legacy -A INPUT -i eth0 -j ACCEPT
iptables-legacy -A INPUT -i eth1 -j ACCEPT

iptables-legacy -A INPUT -i eth2 -m state --state ESTABLISHED -j ACCEPT
iptables-legacy -A INPUT -i eth2 -j DROP

!iptables-legacy -t nat -A POSTROUTING -s 10.0.0.0/24 -j MASQUERADE
!iptables-legacy -t nat -A POSTROUTING -s 11.1.0.0/16 -j MASQUERADE